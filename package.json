{
  "name": "tailwind-color-generator",
  "displayName": "Tailwind Color Generator",
  "version": "2.0.0",
  "description": "Generate Tailwind-compatible color palettes with MCP server integration for AI assistants",
  "publisher": "RemoteSkills",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.95.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other",
    "Themes",
    "Snippets"
  ],
  "keywords": [
    "tailwind",
    "colors",
    "palette",
    "mcp",
    "ai",
    "copilot",
    "design",
    "model-context-protocol",
    "language-model-tools"
  ],
  "activationEvents": [],
  "contributes": {
    "languageModelTools": [
      {
        "name": "generate_tailwind_palette",
        "displayName": "Generate Tailwind Palette",
        "modelDescription": "Generate a complete Tailwind-compatible color palette from a base color",
        "inputSchema": {
          "type": "object",
          "properties": {
            "baseColor": {
              "type": "string",
              "description": "Base color in hex, hsl, or named format (e.g., \"#3B82F6\", \"hsl(220, 91%, 65%)\", \"blue\")"
            },
            "name": {
              "type": "string",
              "description": "Name for the color palette (default: \"primary\")"
            },
            "format": {
              "type": "string",
              "enum": ["js", "css", "json"],
              "description": "Output format (default: \"js\")"
            }
          },
          "required": ["baseColor"]
        },
        "tags": ["tailwind", "colors"],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "generateTailwindPalette"
      },
      {
        "name": "generate_color_scheme",
        "displayName": "Generate Color Scheme", 
        "modelDescription": "Generate multiple color palettes using color harmony strategies (complementary, analogous, monochromatic, triadic)",
        "inputSchema": {
          "type": "object",
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["complementary", "analogous", "monochromatic", "triadic"],
              "description": "Color harmony strategy to use"
            },
            "baseHue": {
              "type": "number",
              "description": "Base hue (0-360 degrees) for the color scheme"
            },
            "colorNames": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Names for the generated color palettes"
            },
            "format": {
              "type": "string",
              "enum": ["js", "css", "json"],
              "description": "Output format (default: \"js\")"
            }
          },
          "required": ["strategy"]
        },
        "tags": ["tailwind", "colors", "harmony"],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "generateColorScheme"
      },
      {
        "name": "analyze_color",
        "displayName": "Analyze Color",
        "modelDescription": "Analyze a color and provide detailed information about its properties and accessibility",
        "inputSchema": {
          "type": "object",
          "properties": {
            "color": {
              "type": "string",
              "description": "Color to analyze in hex, hsl, or named format"
            }
          },
          "required": ["color"]
        },
        "tags": ["colors", "accessibility", "analysis"],
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "analyzeColor"
      }
    ],
    "commands": [
      {
        "command": "tailwind-color-generator.configure",
        "title": "Configure MCP Server",
        "category": "Tailwind Color Generator"
      },
      {
        "command": "tailwind-color-generator.test",
        "title": "Test MCP Server",
        "category": "Tailwind Color Generator"
      },
      {
        "command": "tailwind-color-generator.generatePalette",
        "title": "Generate Color Palette",
        "category": "Tailwind Color Generator"
      }
    ],
    "configuration": {
      "title": "Tailwind Color Generator",
      "properties": {
        "tailwindColorGenerator.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the MCP server file (defaults to bundled server)"
        },
        "tailwindColorGenerator.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the MCP server when VS Code starts"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "tailwind-color-generator.generatePalette",
          "when": "editorTextFocus",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "tailwind-color-generator.configure",
          "title": "Tailwind Color Generator: Configure MCP Server"
        },
        {
          "command": "tailwind-color-generator.test",
          "title": "Tailwind Color Generator: Test MCP Server"
        },
        {
          "command": "tailwind-color-generator.generatePalette",
          "title": "Tailwind Color Generator: Generate Color Palette"
        }
      ]
    }
  },
  "scripts": {
    "start": "node mcp-server.js",
    "dev": "node --watch mcp-server.js",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build",
    "build": "echo 'Build complete'",
    "watch": "echo 'Watch mode not configured'",
    "pretest": "npm run compile",
    "test": "echo 'No tests configured'",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "chroma-js": "^2.4.2"
  },
  "devDependencies": {
    "@types/vscode": "~1.95.0",
    "@types/node": "16.x",
    "@vscode/vsce": "^3.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chihebnabil/tailwind-color-generator-vscode"
  },
  "author": "Chiheb Nabil",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#3B82F6",
    "theme": "dark"
  }
}
